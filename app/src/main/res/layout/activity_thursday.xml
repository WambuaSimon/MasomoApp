<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fillViewport="false"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/android"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.cymmoh.maseno.SignUp"

            >

            <EditText
                android:id="@+id/editText_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="100sp"
                android:layout_marginTop="100sp"
                android:background="#fff"
                android:hint="Enter Unit Code"

                android:padding="10dp"
                android:singleLine="true"
                android:inputType="text" />

            <EditText
                android:id="@+id/editText_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/editText_unit"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="100sp"
                android:layout_marginTop="100sp"
                android:background="#fff"
                android:hint="Venue"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="text" />

            <EditText
                android:id="@+id/editText_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText_venue"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="100sp"
                android:layout_marginTop="100sp"
                android:background="#fff"
                android:hint="Time "
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="time" />

            <EditText
                android:id="@+id/editText_lecturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/editText_time"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100sp"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="100sp"
                android:layout_marginTop="100sp"
                android:background="#fff"
                android:hint="Lecturer"
                android:padding="10dp"
                android:singleLine="true"
                android:inputType="textPersonName" />

            <Button
                android:layout_width="100sp"
                android:layout_height="70sp"
                android:text="View Schedule"
                android:textAllCaps="false"
                android:id="@+id/button_view"
                android:layout_gravity="right"
                android:layout_below="@+id/editText_lecturer"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="100sp"
                android:layout_height="70sp"
                android:text="Add Data"
                android:textAllCaps="false"
                android:id="@+id/button_add"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >





        </LinearLayout>

        <Button
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:text="Enter the Unit Code to Delete a Unit\t"
            android:id="@+id/button_delete"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RelativeLayout>

    </LinearLayout>
</ScrollView>